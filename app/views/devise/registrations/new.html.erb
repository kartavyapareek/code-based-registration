<div class="container">
  <div class="row" style="padding-top: 60px;padding-bottom: 100px;">

    <h2 class="text-center">Sign Up</h2>

    <div class="col-md-4 col-md-offset-4">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { name: "devise-form" } do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, :value => @email, autofocus: true, class: "form-control", required: true, placeholder: "Your Email Id", readonly: true %>
        </div>

        <div class="form-group">
          <%= f.label :secret_code %><br />
          <%= f.text_field :secret_code, value: @secret_code, autofocus: true, class: "form-control", required: true, placeholder: "Your Secret Code"%>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "Set Your Login Password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true, placeholder: "Confirm Your Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign Up", class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <hr>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>

