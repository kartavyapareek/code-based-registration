<div class="container">
  <div class="row" style="padding-top: 60px;padding-bottom: 100px;">

    <h2 class="text-center">Forgot your password?</h2>

    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", required: true, placeholder: "Your Email Id"%>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <hr>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>


